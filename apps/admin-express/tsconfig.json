{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "include": ["src", "tsconfig.paths.json"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
