{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@di": ["src/di"],
      "@di/*": ["src/di/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
