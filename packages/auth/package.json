{
  "name": "@shared/auth",
  "private": true,
  "author": "Evgenii Shcherbakov <iipekolict@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "dev": "nodemon",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig-cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run patch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/*",
    "patch": "npm run --workspace=@shared/scripts patch-package auth"
  },
  "devDependencies": {
    "@shared/scripts": "*",
    "@shared/ts-configs": "*",
    "nodemon": "^3.0.3",
    "typescript": "latest"
  }
}
