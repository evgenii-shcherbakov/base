{
  "name": "@packages/common",
  "private": true,
  "author": "Evgenii Shcherbakov <iipekolict@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/node.js",
  "module": "dist/esm/browser.js",
  "exports": {
    ".": {
      "import": "./dist/esm/browser.js",
      "require": "./dist/cjs/node.js",
      "types": "./src/node.ts"
    },
    "./browser": {
      "import": "./dist/esm/browser.js",
      "require": "./dist/cjs/browser.js",
      "types": "./src/browser.ts"
    },
    "./node": {
      "import": "./dist/esm/node.js",
      "require": "./dist/cjs/node.js",
      "types": "./src/node.ts"
    }
  },
  "scripts": {
    "format": "prettier src --write --config ../../.prettierrc",
    "dev": "nodemon",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig-cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run patch",
    "patch": "npm run --workspace=@packages/scripts patch-package common",
    "clean": "rm -rf dist/*",
    "reset": "rm -rf .turbo dist"
  },
  "dependencies": {
    "@nestjs/swagger": "^7.3.0",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@packages/scripts": "*",
    "@packages/ts-configs": "*",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
