import { NestFactory } from '@nestjs/core';
import { MicroserviceOptions } from '@nestjs/microservices';
import { ApiExceptionFilter } from '@packages/backend.common';
import { GrpcClientEnum, GrpcStrategy } from '@packages/backend.transport';
import { {{ pascalCase name }}Module } from '{{ dashCase name }}.module';

async function bootstrap() {
  const app = await NestFactory.createMicroservice<MicroserviceOptions>(
    {{ pascalCase name }}Module,
    GrpcStrategy.getClientOptions(GrpcClientEnum.{{#if grpcClient}}{{grpcClient}}{{else}}{{ constantCase name }}{{/if}}),
  );

  app.useGlobalFilters(new ApiExceptionFilter());
  await app.listen();
}
bootstrap();
